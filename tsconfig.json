{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "es2015",
    "importHelpers": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "sourceMap": true
  },
  "dirs": [
    "."
  ]
}
